{
  "name": "virtualmadden-dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all build:stylus --parallel build:stylus:watch start:dev",
    "start:dev": "react-scripts start",
    "build": "npm run build:stylus && react-scripts build",
    "build:stylus": "stylus src/stylus/app.styl -o src/index.css",
    "build:stylus:watch": "stylus -w src/stylus/app.styl -o src/index.css",
    "style": "prettier --write \"{src,test}/**/*.js\"",
    "lint": "eslint -c package.json src/**/*.js",
    "lint:fix": "eslint -c package.json --fix src/**/*.js",
    "check": "npm run style && npm run lint",
    "test": "react-scripts test",
    "test:ci": "CI=true react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/user-event": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-prettier": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "style-loader": "^1.2.1",
    "stylus": "^0.54.7"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-console": 0,
      "import/no-namespace": 0,
      "react/display-name": 0
    },
    "env": {
      "browser": true,
      "node": true
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 12,
        "branches": 4,
        "functions": 9,
        "lines": 11
      }
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "jsxSingleQuote": true
  }
}
